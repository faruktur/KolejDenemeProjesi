@model KolejDenemeProjesi.Entities.Donemler
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="tabbable-line boxless tabbable-reversed">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#tab_genel" data-toggle="tab" aria-expanded="true"> Genel Dönem Bilgileri </a>
                </li>
                <li class="">
                    <a href="#tab_takvimler" data-toggle="tab" aria-expanded="false">Döneme Ait Takvimler </a>
                </li>
                <li class="">
                    <a href="#tab_Gunler" data-toggle="tab" aria-expanded="false"> Günler </a>
                </li>
                <li class="">
                    <a href="#tab_ogrenciler" data-toggle="tab" aria-expanded="false">Kayıtlı Öğrenciler </a>
                </li>
              
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab_genel">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-gift"></i>Döneme Ait Bilgiler
                            </div>
                            <div class="tools">
                                @*<a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
                                <a href="#portlet-config" data-toggle="modal" class="config" data-original-title="" title=""> </a>
                                <a href="javascript:;" class="reload" data-original-title="" title=""> </a>
                                <a href="javascript:;" class="remove" data-original-title="" title=""> </a>*@
                            </div>
                        </div>
                        <div class="portlet-body">
                            @using (Html.BeginForm("Edit", "Donem", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                                <div class="form-body">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            Dönem Kodu
                                            <span class="required" aria-required="true">*</span>
                                        </label>
                                        <div class="col-md-4">
                                            @Html.EditorFor(model => model.DonemKodu, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            Açıklama
                                            <span class="required" aria-required="true">*</span>
                                        </label>
                                        <div class="col-md-4">
                                            @Html.EditorFor(model => model.Aciklama, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            Dönem Başlangıç Tarihi
                                            <span class="required" aria-required="true">*</span>
                                        </label>
                                        <div class="col-md-4">
                                            @Html.EditorFor(model => model.BaslangicTarihi, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">
                                            Dönem Bitiş Tarihi
                                            <span class="required" aria-required="true">*</span>
                                        </label>
                                        <div class="col-md-4">
                                            @Html.EditorFor(model => model.BitisTarihi, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <a href="~/Admin/Donem/Edit/@Model.Id" class="btn green">Düzenle</a>
                                        </div>
                                    </div>
                                </div>
                            }
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
                <div id="tab_takvimler" class="tab-pane">
                  
                </div>
            </div>
        </div>
    </div>
</div>

