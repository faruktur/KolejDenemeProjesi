@helper ModalFullWidth(string id="modal_full_width",string title="")
{
    <div class="modal" id="@id" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-full">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">@title
                    </h4>
                </div>
                <div id="message_@id">

                </div>
                <div class="modal-body" id="modalbody_@id"></div>
                <div class="modal-footer">
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">Kapat</button>

                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
}
