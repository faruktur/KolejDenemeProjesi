@model KolejDenemeProjesi.Entities.DonemTakvimi
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="portlet light portlet-fit portlet-form bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject font-dark sbold uppercase">Yeni Takvim Tanımlama Formu</span>
        </div>
    </div>
    <div class="portlet-body">
        @using (Html.BeginForm("Edit", "Takvimler", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(c => c.Donem.Id)
            @Html.HiddenFor(c => c.Id)
            <div class="form-body">
                <div class="form-group">
                    <label class="control-label col-md-3">
                        Açıklama
                        <span class="required" aria-required="true">*</span>
                    </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(c => c.Aciklama, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        Öğrenim Tipi
                        <span class="required" aria-required="true">*</span>
                    </label>
                    <div class="col-md-4">
                        @Html.DropDownListFor(c => c.OgrenimTip.Id, (SelectList)ViewBag.OgrenimTipleri as SelectList, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        Eğitim Gün Sayısı
                        <span class="required" aria-required="true">*</span>
                    </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(c => c.EgitimGunSayisi, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        Günlük Eğitim Süresi
                        <span class="required" aria-required="true">*</span>
                    </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(c => c.GunlukSure, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        Başlangıç Tarihi
                        <span class="required" aria-required="true">*</span>
                    </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(c => c.BaslangicTarihi, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        Bitiş Tarihi
                        <span class="required" aria-required="true">*</span>
                    </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(c => c.BitisTarihi, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        İlk Ders Günü Tarihi
                        <span class="required" aria-required="true">*</span>
                    </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(c => c.İlkDersTarihi, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        Son Ders Günü Tarihi
                        <span class="required" aria-required="true">*</span>
                    </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(c => c.SonDersTarihi, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        Mezuniyet Tarihi
                        <span class="required" aria-required="true">*</span>
                    </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(c => c.MezuniyetTarihi, new { @class = "form-control" })
                    </div>
                </div>

            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn green">Kaydet</button>
                        <a href="~/Admin/Takvimler/Index/@Model.Donem.Id" class="btn warning">Vazgeç</a>
                    </div>
                </div>
            </div>
        }
        <!-- END FORM-->
    </div>

</div>

