@model IEnumerable<KolejDenemeProjesi.Entities.Ogrenciler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Öğrenciler 
                </div>
                <div class="actions">
                    <a href="~/Admin/Ogrenci/Create" class="btn btn-default btn-sm btn-circle" id="">
                        <i class="fa fa-plus"></i> Yeni Öğrenci Kaydı
                    </a>
                    <a href="~/Admin/Subeler/Create" class="btn btn-default btn-sm btn-circle" id="">
                        <i class="fa fa-anchor"></i> İşlemler
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <i class="fa fa-calendar"></i> Ad Soyad
                                </th>
                                <th>
                                    <i class="fa fa-home"></i>Öğrenim Tipi
                                </th>
                                <th class="hidden-xs">
                                    <i class="fa fa-user"></i> Şube
                                </th>
                                <th>
                                    <i class="fa fa-calendar-check-o"></i>  Aktiflik
                                </th>

                                <th>
                                    <i class="fa fa-key"></i> İşlemler
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="highlight">
                                        <div class="success"></div>
                                        <span>
                                            &nbsp;&nbsp;&nbsp;&nbsp;@item  @item
                                        </span>
                                    </td>
                                    <td>
                                        @item.Donemler.FirstOrDefault().OgrenimTipi (Düzeltilecek)
                                    </td>
                                    <td class="hidden-xs">@item.Donemler.FirstOrDefault().Sube.Seviye.Seviye /
                                     @item.Donemler.FirstOrDefault().Sube.SubeAdi / 30(alan eklenecek) </td>

                                    <td>
                                        @if (item)
                                        {
                                            <div class="alert alert-success">
                                                <strong>Aktif</strong>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="alert alert-danger">
                                            <strong>Aktif Değil</strong>
                                        </div> 
                                        }

                                    </td>
                                    <td>
                                        <a href="~/Admin/Ogrenciler/Edit/@item.Id" class="btn btn-outline btn-circle btn-sm purple">
                                            <i class="fa fa-edit"></i> Düzenle
                                        </a>
                                        <a href="~/Admin/Ogrenciler/Delete/@item.Id" class="btn btn-outline btn-circle dark btn-sm red">
                                            <i class="fa fa-trash-o"></i> Sil
                                        </a>
                                        <a href="~/Admin/Ogrenciler/Details/@item.Id" class="btn btn-outline btn-circle dark btn-sm blue">
                                            <i class="fa fa-search"></i> Detaylar
                                        </a>
                                        <a href="~/Admin/Ogrenciler/Details/@item.Id" class="btn btn-outline btn-circle dark btn-sm blue">
                                            <i class="fa fa-tasks"></i> Diğer İşlemler(İşlemler listesi popup ile gelecek)
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
