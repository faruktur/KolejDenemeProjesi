@model List<KolejDenemeProjesi.Entities.DonemTakvimi>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Takvimler
                </div>
              
                <div class="actions">
                    <a href="~/Admin/Donem/" class="btn btn-default btn-sm btn-circle">
                        <i class="fa fa-reply"></i> Dönemler Tablosuna Geri Dön
                    </a> 
                    <a href="~/Admin/Donem/Details/@Model.FirstOrDefault().Id" class="btn btn-default btn-sm btn-circle">
                        <i class="fa fa-edit"></i> Dönem Bilgileri Görüntüle
                    </a>     
                    <a href="~/Admin/Takvimler/Create" class="btn btn-default btn-sm btn-circle" id="">
                        <i class="fa fa-plus"></i> Yeni Takvim Ekle
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-advance table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <i class="fa fa-calendar"></i> Günler
                                </th>
                                <th class="hidden-xs">
                                    <i class="fa fa-comment"></i> Açıklama
                                </th>
                                <th>
                                    <i class="fa fa-bookmark"></i>  Dönem
                                </th>
                                <th>
                                    <i class="fa fa-user"></i>Öğrenim Tipi
                                </th>
                                <th>
                                    <i class="fa fa-key"></i> İşlemler
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            { 
                            <tr>
                                <td class="highlight">
                                    <div class="success"></div>
                                    <a class="btn btn-outline btn-circle btn-sm yellow" href="~/Admin/TakvimGunleri/Index/@item.Id"><i class="fa fa-book"></i>Günler(@item.GunBilgileri.Count)</a>
                                </td>
                                <td class="hidden-xs"> @item.Aciklama </td>
                                <td>
                                    <a href="~/Admin/Donem/Details/@item.Donem.Id">    @item.Donem.BaslangicTarihi.Year - @item.BitisTarihi.Year / @item.Donem.DonemKodu </a>
                                </td>
                                <td>
                                    @item.OgrenimTip.OgrenimTip
                                </td>
                                <td>
                                    <a href="~/Admin/Takvimler/Edit/@item.Id" class="btn btn-outline btn-circle btn-sm purple">
                                        <i class="fa fa-edit"></i> Düzenle
                                    </a>
                                    <a href="~/Admin/Takvimler/Delete/@item.Id" class="btn btn-outline btn-circle dark btn-sm red">
                                        <i class="fa fa-trash-o"></i> Sil
                                    </a>
                                    <a href="~/Admin/Takvimler/Details/@item.Id" class="btn btn-outline btn-circle dark btn-sm blue">
                                        <i class="fa fa-search"></i> Detaylar
                                    </a>
                                </td>
                            </tr>
                            }
                          
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
